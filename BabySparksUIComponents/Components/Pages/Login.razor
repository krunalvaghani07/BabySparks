@page "/login"
@layout BabySparksUIComponents.Components.Layout.AuthLayout

<div class="login-container">
    <div class="logo">
        <img src="/_content/BabySparksUIComponents/images/appicon.png" alt="App Icon" />
    </div>
    <h2 class="title">Welcome</h2>
    <EditForm Model=@user OnSubmit=@LoginFormSubmitted class="login-form">
        <div class="form-group">
            <div class="input-container">
                <InputText id="email" class="form-control" placeholder="Email Address" @bind-Value="user.Email" />
                <span class="tooltip">Enter your email ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="input-container">
                <InputText id="password" type="password" class="form-control" placeholder="Password" @bind-Value="user.Password" />
                <span class="tooltip">Enter your password</span>
            </div>
        </div>
        <input type="submit" value="Login" class="btn btn-primary login-btn" />
        <div class="register-container">
            Don't have an account?
            <a href="/signup" class="register-link">Register</a>
        </div>
    </EditForm>
</div>
