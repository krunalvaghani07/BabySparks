@page "/login"
@layout BabySparksUIComponents.Components.Layout.AuthLayout

<div class="login-background">
    <EditForm Model=@user OnSubmit=@LoginFormSubmitted FormName="loginform" class="login-form">
        <h2>Welcome Login</h2>
        <div class="form-group">
            <div class="input-container">
                <InputText id="email" class="form-control" placeholder="Email Address" @bind-Value="user.Email" />
                <span class="tooltip">Enter your email ID</span>
            </div>
        </div>
        <div class="form-group">
            <div class="input-container">
                <InputText id="password" type="password" class="form-control" placeholder="Password" @bind-Value="user.Password" />
                <span class="tooltip">Enter your password</span>
            </div>
        </div>
        <input type="submit" value="Login" class="btn btn-primary" />
        <div class="register-container">
            Don't have an account?
            <a href="/signup" class="register-link">Register</a>
            <span class="tooltip">Welcome new user! Create your account here.</span>
        </div>

        <div class="social-login">
            <!-- Facebook login button -->
            <button type="button" class="btn btn-facebook" onclick="loginWithFacebook()">
                <i class="fab fa-facebook-f"></i> Login with Facebook
            </button>
            <br />
            <!-- Instagram login button -->
            <button type="button" class="btn btn-instagram" onclick="loginWithInstagram()">
                <i class="fab fa-instagram"></i> Login with Instagram
            </button>
        </div>
    </EditForm>
</div>
